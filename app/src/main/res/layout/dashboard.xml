<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="2dp"
                card_view:cardCornerRadius="4dp"
                card_view:contentPadding="15dp"
                card_view:cardBackgroundColor="@color/cardview_shadow_start_color">
                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stretchColumns="*">
                        <!--Device Details-->
                        <TableRow>
                            <TextView
                                    android:text="Device Serial No"
                                    android:layout_column="0"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Device MFG Date"
                                    android:layout_column="1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Device Temperature"
                                    android:layout_column="2"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                    android:layout_column="0"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"/>
                            <TextView
                                    android:layout_column="1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"/>
                            <TextView
                                    android:layout_column="2"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"/>
                        </TableRow>
                        <!--Location Details-->
                        <TableRow>
                            <TextView
                                    android:text="Latitude"
                                    android:layout_column="0"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Longitude"
                                    android:layout_column="1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Speed"
                                    android:layout_column="2"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                    android:layout_column="0"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"/>
                            <TextView
                                    android:layout_column="1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"/>
                            <TextView
                                    android:layout_column="2"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"/>
                        </TableRow>
                        <!--Acceleration Details-->
                        <TableRow>
                            <TextView
                                    android:text="Acceleration X"
                                    android:layout_column="0"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Acceleration Y"
                                    android:layout_column="1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Acceleration Z"
                                    android:layout_column="2"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                    android:layout_column="0"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"/>
                            <TextView
                                    android:layout_column="1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"/>
                            <TextView
                                    android:layout_column="2"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"/>
                        </TableRow>
                        <!--Angle Details-->
                        <TableRow>
                            <TextView
                                    android:text="Angle X"
                                    android:layout_column="0"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Angle Y"
                                    android:layout_column="1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                            <TextView
                                    android:text="Angle Z"
                                    android:layout_column="2"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:textStyle="bold"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                    android:layout_column="0"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"/>
                            <TextView
                                    android:layout_column="1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"/>
                            <TextView
                                    android:layout_column="2"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"/>
                        </TableRow>
                </TableLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>
