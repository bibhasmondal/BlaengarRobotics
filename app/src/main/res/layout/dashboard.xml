<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:stretchColumns="*">
    <!--Device Details-->
    <TableRow>
        <TextView
                android:text="Device Serial No"
                android:layout_column="0"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textStyle="bold"/>
        <TextView
                android:text="Device MFG Date"
                android:layout_column="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textStyle="bold"/>
        <TextView
                android:text="Device Temperature"
                android:layout_column="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textStyle="bold"/>
    </TableRow>
    <TableRow>
        <TextView
                android:layout_column="0"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"/>
        <TextView
                android:layout_column="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"/>
        <TextView
                android:layout_column="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"/>
    </TableRow>
    <!--Location Details-->
    <TableRow>
        <TextView
                android:text="Longitude"
                android:layout_column="0"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textStyle="bold"/>
        <TextView
                android:text="Latitude"
                android:layout_column="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textStyle="bold"/>
        <TextView
                android:text="Speed"
                android:layout_column="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textStyle="bold"/>
    </TableRow>
    <TableRow>
        <TextView
                android:layout_column="0"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"/>
        <TextView
                android:layout_column="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"/>
        <TextView
                android:layout_column="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"/>
    </TableRow>
    <!--Acceleration Details-->
    <TableRow>
        <TextView
                android:text="Acceleration X"
                android:layout_column="0"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textStyle="bold"/>
        <TextView
                android:text="Acceleration Y"
                android:layout_column="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textStyle="bold"/>
        <TextView
                android:text="Acceleration Z"
                android:layout_column="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textStyle="bold"/>
    </TableRow>
    <TableRow>
        <TextView
                android:layout_column="0"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"/>
        <TextView
                android:layout_column="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"/>
        <TextView
                android:layout_column="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"/>
    </TableRow>
    <!--Angle Details-->
    <TableRow>
        <TextView
                android:text="Angle X"
                android:layout_column="0"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textStyle="bold"/>
        <TextView
                android:text="Angle Y"
                android:layout_column="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textStyle="bold"/>
        <TextView
                android:text="Angle Z"
                android:layout_column="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textStyle="bold"/>
    </TableRow>
    <TableRow>
        <TextView
                android:layout_column="0"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"/>
        <TextView
                android:layout_column="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"/>
        <TextView
                android:layout_column="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"/>
    </TableRow>
</TableLayout>
